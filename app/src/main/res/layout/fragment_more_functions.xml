<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreFunctionsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_more_category_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категории дохода" />
        <Button
            android:id="@+id/btn_more_category_consumption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категории расхода" />

        <Button
            android:id="@+id/btn_more_banks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Банки" />
        <Button
            android:id="@+id/btn_more_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки" />
        <Button
            android:id="@+id/btn_more_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="О программе" />
        <Button
            android:id="@+id/btn_more_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выход из аккаунта" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>